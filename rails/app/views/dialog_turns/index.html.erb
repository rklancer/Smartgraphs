<h1>Listing dialog_turns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Beforetext</th>
    <th>Responsetemplate</th>
    <th>Responseverifier</th>
    <th>Aftertext</th>
    <th>Nextturnbuttontitle</th>
    <th>Nextturnfornominalresponse</th>
    <th>Nextturnforincorrectresponse</th>
    <th>Islastturn</th>
    <th>Shouldautoadvance</th>
  </tr>

<% @dialog_turns.each do |dialog_turn| %>
  <tr>
    <td><%=h dialog_turn.name %></td>
    <td><%=h dialog_turn.beforeText %></td>
    <td><%=h dialog_turn.responseTemplate_id %></td>
    <td><%=h dialog_turn.responseVerifier_id %></td>
    <td><%=h dialog_turn.afterText %></td>
    <td><%=h dialog_turn.nextTurnButtonTitle %></td>
    <td><%=h dialog_turn.nextTurnForNominalResponse_id %></td>
    <td><%=h dialog_turn.nextTurnForIncorrectResponse_id %></td>
    <td><%=h dialog_turn.isLastTurn %></td>
    <td><%=h dialog_turn.shouldAutoAdvance %></td>
    <td><%= link_to 'Show', dialog_turn %></td>
    <td><%= link_to 'Edit', edit_dialog_turn_path(dialog_turn) %></td>
    <td><%= link_to 'Destroy', dialog_turn, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

